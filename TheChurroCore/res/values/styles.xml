<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- COLORES -->
    <color name="background">#FF80AB</color>
    <color name="mainLayout">#FF4081</color>
    <color name="altLayout">#FAFAFA</color>
    <color name="mainButton">#FFFFFF</color>
    <color name="pressedButton">#9e9e9e</color>
    <color name="altButton">#FF4081</color>
    <color name="mainText">#FFFFFF</color>
    <color name="altText">#9e9e9e</color>
    
    <!-- TAMAÃ‘OS -->
    <dimen name="mainButtonSize">24dp</dimen>
    
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    
    <style name="bigText">
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@color/mainText</item>
    </style>
    
    <style name="bigButton">
        <item name="android:textSize">28sp</item>
        <item name="android:background">@color/mainLayout</item>
        <item name="android:textColor">@drawable/button_click</item>
    </style>
    
    <style name="mainButton" parent="@android:style/TextAppearance">
        <item name="android:textSize">28dp</item>
        <item name="android:background">@color/mainLayout</item>
        <item name="android:textColor">@drawable/button_click</item>
    </style>
    
    <style name="smallButton" parent="@android:style/TextAppearance">
        <item name="android:textSize">22dp</item>
        <item name="android:background">@color/mainLayout</item>
        <item name="android:textColor">@drawable/button_click</item>
    </style>
    
    <style name="answer" parent="@android:style/TextAppearance">
        <item name="android:textSize">23dp</item>
        <item name="android:background">@color/mainLayout</item>
        <item name="android:textColor">@drawable/button_click</item>
    </style>
    
